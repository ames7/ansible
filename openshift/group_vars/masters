# Docker storage is kept separate for easy consumption
docker-volumes:
  - name: docker
    size: 70
    device: /dev/vdb
    mountpoint:
    lun: 0

# OpenShift volumes that will be NFS-mounted. Size is specified in Gi
# A volume can have other attributes (see hosts.j2 in the install role)
# my-volumes:
#   - name: foo
#     size: 1
#     device: /dev/vda
#     mountpoint: /exports/bar
#     dir: zar
#     label: myvol
#     type: pvc
#
nfs-volumes:
  - name: metrics
    size: 15
    device: /dev/vdc
    mountpoint: /exports/metrics
    label: metrics
    dir: data
    lun: 1
  - name: logging
    size: 15
    device: /dev/vdd
    mountpoint: /exports/logging
    label: logging
    dir: data
    lun: 2
  - name: hosted_etcd
